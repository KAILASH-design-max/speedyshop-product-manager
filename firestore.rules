rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user's role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Allow new users to create their profile upon signup
      allow create: if isAuthenticated();
      // Disallow updating/deleting user profiles from the client-side for security
      allow update, delete: if false;
    }

    // Rules for the 'products' collection
    match /products/{productId} {
      // Any authenticated user can read product data
      allow read: if isAuthenticated();
      
      // Only users with the 'admin' role can create, update, or delete products
      allow create, update, delete: if isAuthenticated() && getUserRole() == 'admin';
    }
  }
}
