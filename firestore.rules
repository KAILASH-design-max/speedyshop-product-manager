rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all access to prevent unauthorized data access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to perform all operations on the 'products' collection.
    // This secures your product data, ensuring only logged-in users can manage inventory.
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
  }
}
